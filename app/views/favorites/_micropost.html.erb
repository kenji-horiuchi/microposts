<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <% if current_user.favorite?(micropost) %>
    <%= render 'follow_form' %>
    
    <% favorite = { id: 1 }%>
    <%= link_to "お気に入りの解除", favorite_path(current_user.favorites.find_by(micropost: micropost.id), favorite_id: micropost.id), method: :delete %>  <!-- :idが認識できるものがURLヘルパの引数に必要 -->
    <!-- <a href=”/favorites?favorite_id=micropost.id” data-method=”post" >お気に入りの登録</a> -->
    <!-- link_toメソッドの_pathメソッドの引数にハッシュを渡すことで、URLにパラメータ（クエリストリング）を付与することができる -->
    <!-- favorite_id=micropost.id(クエリ部分)をコントローラのparamsとして取得できる -->
    <% link_to "お気に入りに登録", favorites_path(favorite_id: micropost.id), method: :post %>
  <% end %>
</li>